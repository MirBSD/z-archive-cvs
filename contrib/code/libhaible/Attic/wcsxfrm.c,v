#include <errno.h>
#include <stdlib.h>
#include <wchar.h>

__RCSID("$MirOS: contrib/code/libhaible/wcsxfrm.c,v 1.1 2006/05/30 20:34:39 tg Exp $");

size_t
wcsxfrm(wchar_t *__restrict__ dest, const wchar_t *__restrict__ src, size_t n)
{
	if (n == 0)
		return (wcslen(src));
	return (wcslcpy(dest, src, n));
}
