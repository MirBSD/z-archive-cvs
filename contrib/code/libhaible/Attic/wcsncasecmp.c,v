#include <wctype.h>

__RCSID("$MirOS: contrib/code/libhaible/wcsncasecmp.c,v 1.1 2006/05/30 12:28:50 tg Exp $");

int
wcsncasecmp(const wchar_t *s1, const wchar_t *s2, size_t n)
{
	wchar_t c;

	if (n != 0) {
		do {
			if (towlower(*s1) != (c = towlower(*s2++)))
				return (towlower(*s1) - c);
			if (*s1++ == L'\0')
				break;
		} while (--n != 0);
	}
	return (0);
}
@


