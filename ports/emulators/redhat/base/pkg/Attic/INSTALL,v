1.4
log
@remove redhat and debian emulation in favour of fedora emulation
while probably still not feature-complete, a definitive improvement
if something breaks, tell me and Iâ€™ll fix it ASAP of course
@
text
@#!/bin/sh
# $MirOS: ports/emulators/redhat/base/pkg/INSTALL,v 1.3 2006/02/01 20:38:45 tg Exp $
#
# Pre/post-installation setup of redhat_base

# exit on errors, use a sane path and install prefix
#
set -e
PATH=/bin:/usr/bin:/sbin:/usr/sbin
PREFIX=${PKG_PREFIX:-/usr/local}

# verify proper execution
#
if [ $# -ne 2 ]; then
    echo "usage: $0 distname { PRE-INSTALL | POST-INSTALL }" >&2
    exit 1
fi

# Verify/process the command
#
case $2 in
    PRE-INSTALL)
	if [ ! -e $PREFIX/emul/linux/.setup_done ]; then
		echo "+================================================"
		echo "| Error: the linux-common package has not been"
		echo "| set up correctly. To fix this, execute"
		echo "| \$ sudo $PREFIX/emul/linux/linuxctl setup"
		echo "+================================================"
		exit 1
	fi
	if [ x"$(sysctl -n kern.emul.linux)" != x"1" ]; then
		echo "+================================================"
		echo "| Error: the Linux emulation must be enabled in"
		echo "| order to use this port. To do so, execute"
		echo "|    \$ sudo sysctl -w kern.emul.linux=1"
		echo "| Please refer to compat_linux(8) for further"
		echo "| information on this topic."
		echo "+================================================"
		exit 1
	fi
	;;
    POST-INSTALL)
	set +e
	$PREFIX/emul/linux/linuxctl register ${PREFIX}/emul/redhat \
	    bin etc lib sbin usr var
	${PREFIX}/emul/redhat/sbin/ldconfig
	set -e
	;;
    *)
	echo "usage: $0 distname { PRE-INSTALL | POST-INSTALL }" >&2
	exit 1
	;;
esac

exit 0
@


