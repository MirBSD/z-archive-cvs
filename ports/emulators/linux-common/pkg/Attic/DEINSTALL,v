@#!/bin/sh
# $MirOS: ports/emulators/linux-common/pkg/DEINSTALL,v 1.2 2007/01/01 17:22:06 tg Exp $

PATH=/bin:/usr/bin:/sbin:/usr/sbin
PREFIX=${PKG_PREFIX:-/usr/local}

if [ x"$(id -u)" = x"0" ]; then
	SUDO=
else
	SUDO=sudo
fi

$SUDO $PREFIX/emul/linux/linuxctl dispose
exit 0
@


