log
@â€¢ replace MODGNU_CONFIG_GUESS_DIRS with MODGNU_RECURSE_DIRS
â€¢ always place ${WRKSRC} itself at the end of MODGNU_RECURSE_DIRS due to
  recursion issues inside of autoconf itself
â€¢ if MODGNU_RECURSE_DIRS=${WRKSRC} stood in the Makefile, nuke it (default)
â€¢ remove dead reference to MODGNU_TWIDDLE_DIRS
@
text
@# $MirOS: ports/net/mldonkey/stable/Makefile,v 1.4 2006/09/14 00:11:54 tg Exp $
# $OpenBSD: Makefile,v 1.2 2004/04/19 08:42:25 espie Exp $

COMMENT=			Filesharing client/server for multiple networks
CATEGORIES=		net
DISTNAME=		mldonkey-2.5-4
PKGNAME=		mldonkey-2.5.4-1
HOMEPAGE=		http://savannah.nongnu.org/projects/mldonkey/
MASTER_SITES=		http://savannah.nongnu.org/download/mldonkey/release-2.5-4/official/

# GPL
PERMIT_PACKAGE_FTP=	Yes
PERMIT_PACKAGE_CDROM=	Yes
PERMIT_DISTFILES_FTP=	Yes
PERMIT_DISTFILES_CDROM=	Yes

CONFIGURE_STYLE=	autoconf
AUTOCONF_NEW=		Yes
MODGNU_RECURSE_DIRS=	${WRKSRC}/config
CONFIGURE_ARGS+=	--enable-ocamlver=3.07

USE_GMAKE=		Yes
MODULES=		lang/ocaml
BUILD_DEPENDS+=		::x11/lablgtk
LIB_DEPENDS+=		gdk.1,gtk.1::x11/gtk+1
FAKE_FLAGS+=		prefix=${DESTDIR}${PREFIX} \
			MODOCAML_NATIVE=${MODOCAML_NATIVE}
NO_REGRESS=		Yes

post-install:
	mkdir -p ${PREFIX}/share/mldonkey
	cp -R ${WRKDIST}/{distrib,docs} ${PREFIX}/share/mldonkey

.include <bsd.port.mk>
@


