1.9
log
@Remove. This thing is a security nightmare, and it will never cease to be.
@
text
@# $MirOS: ports/net/ethereal/Makefile,v 1.8 2006/09/14 00:11:41 tg Exp $
# $OpenBSD: Makefile,v 1.90 2004/05/10 06:14:43 jakob Exp $

BROKEN=		"many security problems"

COMMENT=			network protocol analyzer
COMMENT-x11=			network protocol analyzer (X11 GUI)
VERSION=	0.10.3
DISTNAME=	ethereal-${VERSION}
CATEGORIES=	net x11

FULLPKGNAME=		tethereal-${VERSION}-0${FLAVOR_EXT}
FULLPKGNAME-x11=	ethereal-${VERSION}-0${FLAVOR_EXT}

MASTER_SITES=	http://www.ethereal.com/distribution/all-versions/ \
		http://ethereal.zing.org/distribution/all-versions/ \
		http://ethereal.boehm.org/distribution/all-versions/
HOMEPAGE=	http://www.ethereal.com/

# GPL
PERMIT_PACKAGE_CDROM=	Yes
PERMIT_PACKAGE_FTP=	Yes
PERMIT_DISTFILES_CDROM=	Yes
PERMIT_DISTFILES_FTP=	Yes

CONFIGURE_STYLE=	gnu
USE_GMAKE=		Yes
SUBST_VARS+=		VERSION

FLAVORS=	snmp adns gtk1
PSEUDO_FLAVORS=	no_x11
FLAVOR?=
SUBPACKAGE?=

.if ! ${FLAVOR:L:Mno_x11}
USE_X11=		Yes
.endif

MODULES+=		converters/libiconv
LIB_DEPENDS+=		pcre::devel/pcre

CONFIGURE_ARGS+=	--with-pcre=${LOCALBASE} \
			--with-glib-prefix=${LOCALBASE} \

.if ! ${FLAVOR:L:Mno_x11}
MULTI_PACKAGES+=	-x11
CONFIGURE_ARGS+=	--enable-ethereal \
			--with-gtk-prefix=${LOCALBASE}
.else
CONFIGURE_ARGS+=	--disable-ethereal
.endif

.if ${FLAVOR:L:Mgtk1}
CONFIGURE_ARGS+=	--enable-gtk1
LIB_DEPENDS+=		glib.1.2,gmodule.1.2::devel/glib1
.if ! ${FLAVOR:L:Mno_x11}
BUILD_DEPENDS+=		gtk.1.2::x11/gtk+
.endif
.else
CONFIGURE_ARGS+=	--enable-gtk2
LIB_DEPENDS+=		glib-2.0.0.0,gthread-2.0.0.0::devel/glib
MODULES+=		devel/pkgconfig
.if ! ${FLAVOR:L:Mno_x11}
BUILD_DEPENDS+=		gdk_pixbuf-2.0.0.0,gdk-x11-2.0.0.0,gtk-x11-2.0.0.0::x11/gtk+
.endif
.endif

.if ${SUBPACKAGE} == "-x11"
.if ${FLAVOR:L:Mgtk1}
LIB_DEPENDS+=		gtk.1.2::x11/gtk+1
.else
LIB_DEPENDS+=		gdk_pixbuf-2.0.0.0,gdk-x11-2.0.0.0,gtk-x11-2.0.0.0::x11/gtk+
.endif
RUN_DEPENDS+=		:tethereal-${VERSION}${FLAVOR_EXT}:net/ethereal
.endif

.if ${FLAVOR:L:Msnmp}
CONFIGURE_ARGS+=	--with-ucd-snmp
CONFIGURE_ENV+=		LIBS="-lsnmp -lcrypto -ldes"
LIB_DEPENDS+=		snmp::net/ucd-snmp
.else
CONFIGURE_ARGS+=	--without-ucd-snmp
.endif

.if ${FLAVOR:L:Madns}
CONFIGURE_ARGS+=	--with-adns=${LOCALBASE}
LIB_DEPENDS+=		adns::net/adns
CFLAGS+=		-I${LOCALBASE}/include
.else
CONFIGURE_ARGS+=	--without-adns
.endif

pre-configure:
	rm -f ${WRKSRC}/ltconfig ${WRKSRC}/ltmain.sh
	rm -f ${WRKBUILD}/libtool
	ln -s ${LIBTOOL} ${WRKBUILD}/libtool

post-configure:
	rm -f ${WRKBUILD}/epan/libtool
	rm -f ${WRKBUILD}/wiretap/libtool
	ln -s ${LIBTOOL} ${WRKBUILD}/epan/libtool
	ln -s ${LIBTOOL} ${WRKBUILD}/wiretap/libtool

.include <bsd.port.mk>
@


