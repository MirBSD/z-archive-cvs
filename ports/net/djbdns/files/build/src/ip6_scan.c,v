/* $MirOS: ports/net/djbdns/files/build/src/ip6_scan.c,v 1.3 2006/03/27 21:28:23 tg Exp $ */
d7 1
a7 2

static inline int fromhex(unsigned char);
a96 10
static inline int fromhex(unsigned char c) {
  if (c>='0' && c<='9')
    return c-'0';
  else if (c>='A' && c<='F')
    return c-'A'+10;
  else if (c>='a' && c<='f')
    return c-'a'+10;
  return -1;
}

