1.7
log
@bulk convert FLAVOR to FLAVOUR; nuke unused file; convert to $Mdocdate
@
text
@# $MirOS: ports/net/gaim/Makefile,v 1.6 2006/09/14 00:11:43 tg Exp $
# $OpenBSD: Makefile,v 1.73 2005/01/28 16:33:28 fgsch Exp $

NOT_FOR_PLATFORM=	${NOPIC_PLATFORMS}

COMMENT=			Gtk AIM, ICQ, IRC, Jabber, MSN, Yahoo and Zephyr client

DISTNAME=		gaim-1.5.0
CATEGORIES=		net
HOMEPAGE=		http://gaim.sourceforge.net/
MASTER_SITES=		${MASTER_SITE_SOURCEFORGE:=gaim/}

EXTRACT_SUFX=		.tar.bz2

# GPL
PERMIT_PACKAGE_CDROM=	Yes
PERMIT_PACKAGE_FTP=	Yes
PERMIT_DISTFILES_CDROM=	Yes
PERMIT_DISTFILES_FTP=	Yes

RESPONSIBLE=		Benny Siegert <bsiegert@@gmx.de>

MODULES=		devel/gettext devel/pkgconfig

LIB_DEPENDS+=		gdk-x11-2.0.0.0,gdk_pixbuf-2.0.0.0,gtk-x11-2.0.0.0::x11/gtk+ \
			startup-notification-1.0.0::devel/startup-notification

USE_X11=		Yes
USE_GMAKE=		Yes
USE_CXX=		Yes
CONFIGURE_STYLE=	autoconf
AUTOCONF_NEW=		Yes
CONFIGURE_ARGS+=	 --disable-gevolution \
			 --disable-gnutls \
			 --disable-nas \
			 --disable-nss \
			 --disable-perl \
			 --disable-tcl \
			 --disable-tk \
			 --enable-openssl

FLAVOURS=		audio debug gtkspell
FLAVOUR?=	

.if ${FLAVOUR:L:Maudio}
LIB_DEPENDS+=		audiofile::devel/libaudiofile \
			ao.3::audio/libao
.else
CONFIGURE_ARGS+=	 --disable-audio
.endif

.if ${FLAVOUR:L:Mdebug}
CFLAGS=			-O0
CONFIGURE_ARGS+=	--enable-debug
INSTALL_STRIP=
.endif

.if ${FLAVOUR:L:Mgtkspell}
LIB_DEPENDS+=		gtkspell::textproc/gtkspell
.else
CONFIGURE_ARGS+=	--disable-gtkspell
.endif

post-extract:
	@@cp -f ${FILESDIR}/ssl-openssl.c ${WRKSRC}/plugins/ssl

.include <bsd.port.mk>
@


