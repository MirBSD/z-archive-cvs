DISTFILES=	zip23.tar.gz zcrypt29.zip
d27 1
a27 2
CPPFLAGS+=		-I. -DUNIX
FAKE_FLAGS=	prefix="${WRKINST}${PREFIX}"
d33 1
a33 1
WRKDIST=	${WRKDIR}/zip-2.3
@


