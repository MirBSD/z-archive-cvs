1.6
log
@bulk convert FLAVOR to FLAVOUR; nuke unused file; convert to $Mdocdate
@
text
@# $MirOS: ports/archivers/gtar/Makefile,v 1.5 2007/02/22 22:57:42 tg Exp $
# $OpenBSD: Makefile,v 1.29 2004/05/15 12:57:34 naddy Exp $

COMMENT=			GNU version of the traditional tar archiver
DISTNAME=		tar-1.15.1
PKGNAME=		g${DISTNAME}-0
CATEGORIES=		archivers
HOMEPAGE=		http://www.gnu.org/software/tar/
MASTER_SITES=		${MASTER_SITE_GNU:=tar/}
EXTRACT_SUFX=		.tar.bz2

# GNU GPLv2
PERMIT_PACKAGE_CDROM=	Yes
PERMIT_PACKAGE_FTP=	Yes
PERMIT_DISTFILES_CDROM=	Yes
PERMIT_DISTFILES_FTP=	Yes

RUN_DEPENDS=		:bzip2-*:archivers/bzip2

CONFIGURE_STYLE=	gnu
CONFIGURE_ARGS=		--program-prefix=g \
			--disable-rpath \
			--disable-nls
CONFIGURE_ENV+=		DEFAULT_ARCHIVE=/dev/rst0 \
			ac_cv_func_working_mktime=yes \
			DEFAULT_RMT_COMMAND=/etc/rmt

FLAVOURS=		static
FLAVOUR?=

.if ${FLAVOUR:L:Mstatic}
LDSTATIC=		-static
.else
LDSTATIC=
.endif

.include <bsd.port.mk>
@


