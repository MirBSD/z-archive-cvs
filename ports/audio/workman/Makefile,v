@# $MirOS: ports/audio/workman/Makefile,v 1.4 2007/04/04 18:00:26 bsiegert Exp $
# $OpenBSD: Makefile,v 1.24 2002/10/24 22:20:04 naddy Exp $

ONLY_FOR_PLATFORM=	MirBSD:*:* OpenBSD:*:*

COMMENT=	OpenLook-based CD player
DISTNAME=	WorkMan-1.3a
PKGNAME=	${DISTNAME:L}-0
CATEGORIES=	audio

MASTER_SITES=	${MASTER_SITE_XCONTRIB:=applications/WorkMan/}

PERMIT_PACKAGE_CDROM=	Yes
PERMIT_PACKAGE_FTP=	Yes
PERMIT_DISTFILES_CDROM=	Yes
PERMIT_DISTFILES_FTP=	Yes

USE_X11=	Yes
LIB_DEPENDS=	xview.3.2,olgx.3.2::x11/xview/lib
BUILD_DEPENDS=	::x11/xview/config

CONFIGURE_STYLE=imake
MAKE_ENV=	IMAKEINCLUDE=-I${LOCALBASE}/lib/X11/config

WRKDIST=	${WRKDIR}/workman

USE_CXX=	Yes
NO_REGRESS=	Yes

.include <bsd.port.mk>
@


