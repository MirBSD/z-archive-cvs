@# $MirOS: ports/editors/textedit/Makefile,v 1.4 2007/04/11 17:05:31 bsiegert Exp $
# $OpenBSD: Makefile,v 1.18 2002/10/26 00:39:15 naddy Exp $

ONLY_FOR_PLATFORM=	MirBSD:*:* OpenBSD:*:*

COMMENT=	standard OpenLook text editor for X11

DISTNAME=	textedit
PKGNAME=	textedit-1.0-0
CATEGORIES=	editors


PERMIT_PACKAGE_CDROM=	"No licence information"
PERMIT_PACKAGE_FTP=	"No licence information"
PERMIT_DISTFILES_CDROM=	"No licence information"
PERMIT_DISTFILES_FTP=	"No licence information"

MASTER_SITES=	http://www.darwinsys.com/freeware/

LIB_DEPENDS=    xview.3,olgx.3::x11/xview/lib
BUILD_DEPENDS=	::x11/xview/config

CONFIGURE_STYLE=imake
USE_X11=	Yes

MAKE_ENV=	IMAKEINCLUDE=-I${LOCALBASE}/lib/X11/config

NO_REGRESS=	Yes

.include <bsd.port.mk>
@


