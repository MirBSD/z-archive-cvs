RUN_DEPENDS=	:python-tkinter-${MODPY_VERSION}*:lang/python/${MODPY_VERSION},-tkinter
.else
USE_X11=	Yes
.endif

NO_REGRESS=	Yes

.include <bsd.port.mk>
