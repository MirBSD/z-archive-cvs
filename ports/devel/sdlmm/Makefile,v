USE_CXX=	Yes

CONFIGURE_STYLE= gnu
CONFIGURE_ARGS=	${CONFIGURE_SHARED}
CONFIGURE_ENV+=	LIBS="${LIBS} -lstdc++ -lm"

.include <bsd.port.mk>
