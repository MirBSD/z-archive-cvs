1.1.2.1
log
@Initial prototype of regression tests for pkgtools, using C and perl's
Test::More and Test::Harness (aka prove(1))
@
text
@a0 17
# Makefile for MirPorts tests

regress: test-cfgfile
	prove *.t

.include <bsd.own.mk>
.include <../Makefile.inc>

test-cfgfile: test-cfgfile.o
	${CC} ${LDFLAGS} ${LDSTATIC} -o $@@ $> ${LDADD}

test-cfgfile.o: test-cfgfile.c

clean:
	rm -f test-cfgfile.o test-cfgfile

.PHONY: regress clean
@

