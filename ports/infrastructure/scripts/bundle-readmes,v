# bundle all README.html files

PORTSDIR=/usr/ports
cd $PORTSDIR &&
mmake readmes &&
tar -zcf ports-readmes.tar.gz -s/^\./ports/ $(cd $PORTSDIR && find . -type d -name w-\* -prune -o -type f -name \*.html -print)
@


