+#ifndef sun
+#ifdef  HALF_DUPLEX
+
+/*  SOUNDGETVOL -- Get current playback volume. */
+
+int soundgetvol()
+{
+   int arg, v1, v2;
+
+   if (ioctl(Audio_fd, SOUND_MIXER_READ_PCM, &arg) < 0) {
+      perror("SOUND_MIXER_READ_PCM");
+      return -1;
+   }
+   v1 = arg & 0xFF;
+   v2 = (arg >> 8) & 0xFF;
+   return (v1 > v2) ? v1 : v2;
+}
+#endif
+#endif
 
 /*  SOUNDRECGAIN  --  Set recording gain from 0 (minimum) to 100 (maximum).  */
 
