@@@comment $MirOS: ports/print/ttf-sil-gentium/PLIST,v 1.2 2009/06/22 12:07:31 tg Exp $
@@pkgcfl gentium-*
lib/X11/fonts/ttf-sil-gentium/FONTLOG
lib/X11/fonts/ttf-sil-gentium/GENTIUM-FAQ
lib/X11/fonts/ttf-sil-gentium/GenAI${VSN}.ttf
lib/X11/fonts/ttf-sil-gentium/GenAR${VSN}.ttf
lib/X11/fonts/ttf-sil-gentium/GenI${VSN}.ttf
lib/X11/fonts/ttf-sil-gentium/GenR${VSN}.ttf
lib/X11/fonts/ttf-sil-gentium/OFL
lib/X11/fonts/ttf-sil-gentium/OFL-FAQ
lib/X11/fonts/ttf-sil-gentium/QUOTES
lib/X11/fonts/ttf-sil-gentium/README
lib/X11/fonts/ttf-sil-gentium/fonts.dir
lib/X11/fonts/ttf-sil-gentium/fonts.scale
@@exec print 'Add "%B" to your font path, both in a FontPath directive in'
@@exec print 'the Files section of /etc/X11/XF86Config, as well as with:'
@@exec print '$ xset fp+ %B; xset fp rehash'
@@exec env HOME=/ ${X11BASE}/bin/fc-cache %B
@@unexec rm -f %B/fonts.cache-1
@@dirrm lib/X11/fonts/ttf-sil-gentium
@@dirrm lib/X11/fonts
@


