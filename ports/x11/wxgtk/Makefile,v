# LGPL
PERMIT_PACKAGE_CDROM=	Yes
PERMIT_PACKAGE_FTP=	Yes
PERMIT_DISTFILES_CDROM=	Yes
PERMIT_DISTFILES_FTP=	Yes

post-install:
	cd ${PREFIX}/lib && for f in lib*.so; do \
		mv $$f $$f.0.0; \
	done
	cd ${PREFIX}/bin; f="$(readlink wx-config)"; \
	    rm wx-config; ln "$f" wx-config

.include <bsd.port.mk>
