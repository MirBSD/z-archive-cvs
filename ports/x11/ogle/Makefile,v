1.7
log
@bulk convert FLAVOR to FLAVOUR; nuke unused file; convert to $Mdocdate
@
text
@# $MirOS: ports/x11/ogle/Makefile,v 1.6 2006/09/14 00:15:31 tg Exp $
# $OpenBSD: Makefile,v 1.27 2004/02/29 08:12:56 pvalchev Exp $

COMMENT=			DVD player

CATEGORIES=		x11
DISTNAME=		ogle-0.9.2
PKGNAME=		${DISTNAME}-1
HOMEPAGE=		http://www.dtek.chalmers.se/groups/dvd/
# Authors can be reached at dvd@@dtek.chalmers.se
MASTER_SITES=		${HOMEPAGE}dist/

ONLY_FOR_PLATFORM=	*:*:alpha *:*:i386 *:*:powerpc *:*:sparc64 *:*:amd64

# GPL
PERMIT_DISTFILES_CDROM=	Yes
PERMIT_DISTFILES_FTP=	Yes
PERMIT_PACKAGE_CDROM=	Yes
PERMIT_PACKAGE_FTP=	Yes

LIB_DEPENDS=		a52::audio/liba52 \
			dvdread::devel/libdvdread \
			xml2.2.6:libxml->=2.4.19:textproc/libxml \
			jpeg.62::graphics/jpeg \
			mad::audio/libmad

USE_X11=		Yes
CONFIGURE_STYLE=	autoconf no-autoheader
AUTOCONF_NEW=		Yes
CONFIGURE_ARGS+=	--disable-oss --disable-sunaudio --enable-obsdaudio

FLAVOURS=		altivec
FLAVOUR?=

.if ${FLAVOUR:L} == "altivec"
ONLY_FOR_PLATFORM=	*:*:powerpc
CONFIGURE_ARGS+=	--enable-altivec
.else
CONFIGURE_ARGS+=	--disable-altivec
.endif

post-install:
	cd ${PREFIX}/man/man5 && mv oglerc.5 oglerc.tbl

.include <bsd.port.mk>
@


