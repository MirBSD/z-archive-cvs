CONFIGURE_STYLE=	autogen
AUTOCONF_NEW=		Yes
AUTOCONF_VERSION=	2.62
AUTOMAKE_VERSION=	1.9
CONFIGURE_ARGS+=	${CONFIGURE_SHARED} \
			--enable-replace-glut \
			--enable-warnings=no

NO_REGRESS=		Yes

.include <bsd.port.mk>
