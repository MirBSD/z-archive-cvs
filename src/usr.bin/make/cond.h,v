@#ifndef COND_H
#define COND_H
/**	$MirOS: src/usr.bin/make/cond.h,v 1.2 2005/09/01 23:14:22 tg Exp $ */
/*	$OpenBSD: cond.h,v 1.2 2002/06/11 21:12:11 espie Exp $ */

