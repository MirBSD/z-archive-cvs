if ( $?TROFF ) then
	set troff = "$TROFF"
else
	set troff = "troff"
endif

set vf=/usr/libexec/vfontedpr
set tm=/usr/share/tmac

set voptions=
set options=
set files=
set f=''
set head=""

top:
if ($#argv > 0) then
    switch ($1:q)

    case -f:
	set f='filter'
	set options = "$options $1:q"
	shift
	goto top
