			packet_start_discard(enc, mac, packet_length,
			    PACKET_MAX_SIZE);
			return SSH_MSG_NONE;
d1158 1
a1158 3
		packet_start_discard(enc, mac, packet_length,
		    PACKET_MAX_SIZE - block_size);
		return SSH_MSG_NONE;
