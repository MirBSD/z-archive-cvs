			logit("Corrupted MAC on input.");
			if (need > PACKET_MAX_SIZE)
				fatal("internal error need %d", need);
			packet_start_discard(enc, mac, packet_length,
			    PACKET_MAX_SIZE - need);
			return SSH_MSG_NONE;
		}
				
