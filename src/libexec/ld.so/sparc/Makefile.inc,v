1.4
log
@fix sparc ld.so(8) which depended on some libc interna (for softfloat,
soft integer divmul, etc. mostly) by installing a new libmdsup and linking
against it
@
text
@# $MirOS: src/libexec/ld.so/sparc/Makefile.inc,v 1.3 2006/06/30 18:32:50 tg Exp $
# $OpenBSD: Makefile.inc,v 1.2 2002/11/23 19:14:25 drahn Exp $

COPTS+=		-fpic -msoft-float
CPPFLAGS+=	-I${LIBCSRCDIR}/arch/sparc -DSTRONG_SPARC
@


1.3
log
@gcc-3.4.6 pulls in memcpy(3) calls, so we need memcpy standalone source
@
text
@d1 1
a1 1
# $MirOS: src/libexec/ld.so/sparc/Makefile.inc,v 1.2 2006/06/30 18:11:02 tg Exp $
a3 1
LIBCSRCDIR=	${.CURDIR}/../../lib/libc
a5 7
.include "${LIBCSRCDIR}/arch/sparc/Makefile.inc"
.PATH: ${LIBCSRCDIR}/arch/sparc/gen
SRCS+=		umul.S mul.S

.PATH: ${LIBCSRCDIR}/string
SRCS+=		bcopy.c
CFLAGS_bcopy.o=	-UMEMMOVE -DMEMCOPY
@


