use strict;
use Unicode::Normalize qw(:all);

print "1..8\n";
print "ok 1\n";

#########################

no warnings qw(utf8);

# U+3042 is 3-byte length (in UTF-8/UTF-EBCDIC)
our $a = pack 'U0C', unpack 'C', "\x{3042}";

print NFD($a) eq "\0"
   ? "ok" : "not ok", " 2\n";

print NFKD($a) eq "\0"
   ? "ok" : "not ok", " 3\n";

print NFC($a) eq "\0"
   ? "ok" : "not ok", " 4\n";

print NFKC($a) eq "\0"
   ? "ok" : "not ok", " 5\n";

print decompose($a) eq "\0"
   ? "ok" : "not ok", " 6\n";

print reorder($a) eq "\0"
   ? "ok" : "not ok", " 7\n";

print compose($a) eq "\0"
   ? "ok" : "not ok", " 8\n";

