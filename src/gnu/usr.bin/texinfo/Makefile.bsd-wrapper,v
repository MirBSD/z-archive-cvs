1.5
log
@introduce new FSFISLIB (default yes) and set it to no to prevent things
like cvs, lynx, etc. to be built with -O1 -fno-omit-frame-pointer -g1
@
text
@# $MirOS: src/gnu/usr.bin/texinfo/Makefile.bsd-wrapper,v 1.4 2005/07/09 17:43:45 tg Exp $

CFARGS+=	--prefix=/usr --infodir=/usr/share/info \
		--disable-nls --disable-rpath
XVARS+=		LIBS=-liberty
FSFISLIB=	No

MAN=		doc/info.1 doc/info.5 doc/infokey.1 doc/install-info.1 \
		doc/makeinfo.1 doc/texinfo.5

.include <bsd.own.mk>
.include "${GNUSYSTEM_AUX_DIR}/locations.mk"

CPPFLAGS+=	-I${GNU_LIBIBERTY_INC}

build: docdir

docdir:
	test -d doc || mkdir doc

post-install: mkinfodir

mkinfodir:
	${SHELL} ${.CURDIR}/util/gen-dir-node \
	    ${DESTDIR}/usr/share/info >${DESTDIR}/usr/share/info/dir

.include <bsd.cfwrap.mk>
@


