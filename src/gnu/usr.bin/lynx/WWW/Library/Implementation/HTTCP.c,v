/*
 * Even though it is a small amount, we cannot count on reading the whole
 * struct via a pipe in one read -TD
 */
static unsigned readit(int fd, char *buffer, unsigned length)
{
    unsigned result = 0;

    while (length != 0) {
	unsigned got = read(fd, buffer, length);

	if (got != 0) {
	    result += got;
	    buffer += got;
	    length -= got;
	} else {
	    break;
	}
    }
    return result;
}

