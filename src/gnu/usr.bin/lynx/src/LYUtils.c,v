text
@a1249 13
 * Remove most blanks, but restore one trailing blank to make prompts nicer.
 */
static void remove_most_blanks(char *buffer)
{
    int length = strlen(buffer);
    BOOL trailing = (length != 0) && (buffer[length - 1] == ' ');

    LYReduceBlanks(buffer);
    if (trailing)
	strcat(buffer, " ");
}

