#include "dhcpd.h"

char *
print_hw_addr(int htype, int hlen, unsigned char *data)
{
	static char	habuf[49];
	char	*s;
	int	i;

	if (htype == 0 || hlen == 0) {
		goto bad;
	} else {
		int	slen = sizeof(habuf);
		s = habuf;
		for (i = 0; i < hlen; i++) {
			int	j;
			j = snprintf(s, slen, "%02x", data[i]);
			if (j <= 0)
				goto bad;

			s += strlen(s);
			slen -= (strlen(s) + 1);
			*s++ = ':';
		}
		*--s = 0;
	}
	return habuf;
bad:
	strlcpy(habuf, "<null>", sizeof habuf);
	return habuf;

}
