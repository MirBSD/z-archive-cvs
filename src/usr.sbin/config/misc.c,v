#include <sys/types.h>
#include <err.h>
#include <stdio.h>
#include <ctype.h>
#include <stdlib.h>
#include <string.h>

#include "misc.h"

__RCSID("$MirOS$");

extern int verbose;

int
ask_cmd(cmd_t *cmd)
{
	char lbuf[100], *cp, *buf;

	/* Get input */
	if (fgets(lbuf, sizeof lbuf, stdin) == NULL)
		errx(1, "eof");
	lbuf[strlen(lbuf)-1] = '\0';
	if (verbose)
		printf("%s\n", lbuf);

	/* Parse input */
	buf = lbuf;
	buf = &buf[strspn(buf, " \t")];
	cp = &buf[strcspn(buf, " \t")];
	*cp++ = '\0';
	strlcpy(cmd->cmd, buf, sizeof cmd->cmd);
	buf = &cp[strspn(cp, " \t")];
	strlcpy(cmd->args, buf, sizeof cmd->args);

	return (0);
}

int
ask_yn(const char *str)
{
	int ch, first;

	printf("%s [n] ", str);
	fflush(stdout);

	first = ch = getchar();
	if (verbose) {
		printf("%c", ch);
		fflush(stdout);
	}
	while (ch != '\n' && ch != EOF) {
		ch = getchar();
		if (verbose) {
			printf("%c\n", ch);
			fflush(stdout);
		}
	}
	if (ch == EOF || first == EOF)
		errx(1, "eof");

	return (first == 'y' || first == 'Y');
}
