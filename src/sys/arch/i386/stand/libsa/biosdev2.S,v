a77 4
	or	dh,cl
	or	ah,ah
	jz	LnoCD
	cmp	dl,0x88
d91 2
a92 3
	or	dh,16
LnoCD:	or	dh,8
LnoLBA:	call	real_to_prot
d97 2
a98 2
	mov	eax,edx
	shr	eax,8
@


