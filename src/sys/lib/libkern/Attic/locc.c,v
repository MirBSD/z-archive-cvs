#include <sys/types.h>
#include <lib/libkern/libkern.h>

int
locc(mask, cp, size)
	register int mask;
	u_int size;
	register char *cp;
{
	register char *end = &cp[size];

	while (cp < end && *cp != mask)
		cp++;
	return (end - cp);
}
@


