BINDIR=		/sbin
BINOWN=		root
BINGRP=		bin
BINMODE=	0500

PROG=		init
MAN=		init.8
DPADD+=		${LIBUTIL}
LDADD+=		-lutil
INSTALLFLAGS=	-fschg
CPPFLAGS+=	-DDEBUGSHELL -DSECURE -DLOGIN_CAP

.include <bsd.prog.mk>
