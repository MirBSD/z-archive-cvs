#include <err.h>
#include <wchar.h>
#include "ambstowcs.h"

__RCSID("$MirOS: src/share/common/ambstowcs.c,v 1.2 2008/10/04 20:37:12 tg Exp $");

wchar_t *
ambstowcs(const char *s)
{
	wchar_t *ws;
	size_t n;

	if ((ws = calloc((n = mbstowcs(NULL, s, 0) + 1),
	    sizeof (wchar_t))) == NULL)
		err(1, "out of memory allocating %zu wide chars", n);
	mbstowcs(ws, s, n);
	return (ws);
}
