						*cur++ = '/';
					*cur++ = '.';
					*cur++ = '.';
					start = cur;
				} else if (cur != start)
					while (--cur > start && *cur != '/')
						;
				t += 2;
d1597 2
a1598 2
		if (cur != very_start)
			*cur++ = '/';
d1600 12
a1611 4
		/* find/copy next component of pathname */
		while (*t && *t != '/')
			*cur++ = *t++;
	}
