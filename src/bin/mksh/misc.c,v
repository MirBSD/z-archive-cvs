@d6 1
a6 1
__RCSID("$MirOS: src/bin/mksh/misc.c,v 1.20 2006/11/09 20:53:41 tg Exp $\t"
a51 17
/* convert unsigned long to base N string */

char *
ulton(long unsigned int n, int base)
{
	char *p;
	static char buf[20];

	p = &buf[sizeof (buf)];
	*--p = '\0';
	do {
		*--p = "0123456789ABCDEF"[n%base];
		n /= base;
	} while (n != 0);
	return p;
}

