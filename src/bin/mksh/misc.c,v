d1292 1
a1292 1
/* strip all NUL bytes from buf; output is NUL-terminated if stripped */
d1294 1
a1294 1
strip_nuls(char *buf, size_t len)
d1296 1
a1296 1
	char *cp, *dp, *ep;
d1298 20
a1317 15
	if (!len || !(dp = memchr(buf, '\0', len)))
		return;

	ep = buf + len;
	cp = dp;

 cp_has_nul_byte:
	while (cp++ < ep && *cp == '\0')
		;	/* nothing */
	while (cp < ep && *cp != '\0')
		*dp++ = *cp++;
	if (cp < ep)
		goto cp_has_nul_byte;

	*dp = '\0';
@


