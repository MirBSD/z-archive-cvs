	bool messaged = false;						\
									\
	while (/* CONSTCOND */ 1)					\
		if (!(func argvec) || errno != EAGAIN)			\
			break;						\
		else if (!messaged) {					\
			warningf(true, "%s failed with EAGAIN,"		\
			    " probably due to a too low process"	\
			    " limit; retrying infinitely", #func);	\
			messaged = true;				\
		}							\
