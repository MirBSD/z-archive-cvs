}

void
utf_cptradj(const char *src, const char **dst)
{
	size_t len;

	if (!Flag(FUTFHACK) || *(const unsigned char *)src < 0xC2 ||
	    (len = utf_mbtowc(NULL, src)) == (size_t)-1)
		len = 1;
