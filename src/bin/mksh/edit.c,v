	/* return (len); */
d832 2
a833 14
#if HAVE_EXPSTMT
#define utf_ptradj(s,d) ({			\
	union mksh_cchack utf_ptradj_o;		\
	char **utf_ptradj_d = (d);		\
						\
	utf_cptradj((s), &utf_ptradj_o.ro);	\
	*utf_ptradj_d = utf_ptradj_o.rw;	\
})
#else
#define utf_ptradj(s,d) utf_cptradj((s), (const char **)(d))
#endif

