a113 9
function ulynx		# uxterm lynx (UTF-8)
{
	command lynx -display_charset utf8 "$@@"
}
function klynx		# kterm lynx (EUC-JP)
{
	( sleep 1; cls; print -n 'Press Ctrl-L!' ) 2>/dev/null &
	command lynx -display_charset euc-jp "$@@"
}
