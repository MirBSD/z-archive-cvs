[[ -n $KSH_VERSION ]] && function __shortpath {
	typeset tilde=~ path=${1:-${PWD:-$(pwd)}}
	typeset dots= path2=${path#$tilde}
	[[ $path2 = $path || -z $tilde || $tilde = / ]] || path=\~$path2
	let cmax="${COLUMNS:-80} / 3"
	(( cmax < 7 )) && let cmax=7
	while (( (${#dots} + ${#path}) > cmax )); do
		if [[ $path = *@@(/)* ]]; then
			dots=.../
			path="${path#*/}"
		else
			dots=...
			path="${path#?????}"
		fi
	done
	print -nr -- "$dots$path"
}
@


