#include <libckern.h>

__RCSID("$MirOS: src/kern/c/memchr.c,v 1.1 2008/08/01 18:09:17 tg Exp $");

void *
memchr(const void *b, int c, size_t len)
{
	const uint8_t *cp = b;

	while (len--)
		if (*cp++ == (uint8_t)c)
			/* const broken by BAD API */
			return ((void *)(cp - 1));
	return (NULL);
}
