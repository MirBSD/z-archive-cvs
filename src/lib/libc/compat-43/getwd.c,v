#include <sys/param.h>
#include <unistd.h>
#include <errno.h>
#include <stdio.h>
#include <string.h>

char *
getwd(char *buf)
{
	char *p;

	if ((p = getcwd(buf, MAXPATHLEN)))
		return(p);
	strlcpy(buf, strerror(errno), MAXPATHLEN);
	return((char *)NULL);
}

__warn_references(getwd,
    "getwd() possibly used unsafely; consider using getcwd()");
@


