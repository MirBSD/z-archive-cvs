#include <math.h>

/*
 * ldexp(value, expr): return value * (2 ** expr).
 */

double
ldexp (double value, int expr)
{
	double temp;
#if __GNUC__ >= 2
	__asm ("fscale"
		: "=t" (temp)
		: "0" (value), "u" ((double)expr));
#else
	__asm ("fscale; fstp %%st(1)"
		: "=f" (temp)
		: "f" (value), "0" ((double)expr));
#endif
	return (temp);
}
@


