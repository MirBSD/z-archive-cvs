#include <wchar.h>

__RCSID("$MirOS: src/lib/libc/i18n/mbrlen.c,v 1.4 2007/02/02 21:06:21 tg Exp $");

size_t
mbrlen(const char *s, size_t n, mbstate_t *ps)
{
	static mbstate_t internal = { 0, 0 };

	return (mbrtowc(NULL, s, n, (ps == NULL) ? &internal : ps));
}
