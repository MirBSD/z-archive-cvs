#include <wchar.h>

__RCSID("$MirOS: src/lib/libc/i18n/mbsinit.c,v 1.2 2006/11/01 20:01:19 tg Exp $");

#undef mbsinit
int
mbsinit(const mbstate_t *ps)
{
	if (ps == NULL)
		return (-1);

	return (ps->count == 0 ? 1 : 0);
}
