#include <wchar.h>

__RCSID("$MirOS: src/lib/libc/i18n/btowc.c,v 1.17 2007/02/02 19:28:33 tg Exp $");

#undef btowc
wint_t
btowc(int c)
{
	wint_t wc = c;

	return (wc > 0x7F ? WEOF : wc);
}
@


