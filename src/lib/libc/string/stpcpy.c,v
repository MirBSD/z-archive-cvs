#define _GNU_SOURCE
#include <string.h>

__RCSID("$MirOS: src/lib/libc/string/stpcpy.c,v 1.2 2009/04/17 17:16:10 tg Exp $");

char *
stpcpy(char *dst, const char *src)
{
	size_t n;

	n = strlen(src);
	return ((char *)memcpy(dst, src, n + 1) + n);
}
