#include <errno.h>
#include <stdlib.h>
#include <wchar.h>

__RCSID("$MirOS: src/lib/libc/string/wcsxfrm.c,v 1.2 2006/06/02 19:53:42 tg Exp $");

size_t	__weak_wcsxfrm(wchar_t *__restrict__, const wchar_t *__restrict__,
    size_t);

size_t
__weak_wcsxfrm(wchar_t *__restrict__ dest, const wchar_t *__restrict__ src,
    size_t n)
{
	if (n == 0)
		return (wcslen(src));
	return (wcslcpy(dest, src, n));
}

__weak_alias(wcsxfrm, __weak_wcsxfrm);
@


