/*
 * Print the name of the signal indicated
 * along with the supplied message.
 */
#include <sys/types.h>
#include <sys/uio.h>
#include <signal.h>
#include <string.h>
#include <unistd.h>
#include <limits.h>

extern char *__strsignal(int , char *);

void
psignal(unsigned int sig, const char *s)
{
	static char buf[NL_TEXTMAX];
	const char *c;
	int n;
	struct iovec iov[4];
	int niov = 0;

	c = __strsignal(sig, buf);
	if (s && *s) {

		n = strlen(s);
		iov[0].iov_base = (void *)s;
		iov[0].iov_len = n;
		iov[1].iov_base = (void *)": ";
		iov[1].iov_len = 2;
		niov = 2;
	}
	iov[niov].iov_base = (void *)c;
	iov[niov].iov_len = strlen(c);
	iov[niov+1].iov_base = (void *)"\n";
	iov[niov+1].iov_len = 1;
	(void)writev(STDERR_FILENO, iov, niov+2);
}
@


