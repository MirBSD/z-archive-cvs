#include <sys/types.h>
#include <sys/stat.h>

int
isfdtype(int fd, int fdtype)
{
	struct stat sb;

	if (fstat(fd, &sb) != 0)
		return (-1);

	return ((sb.st_mode & S_IFMT) == (mode_t)fdtype);
}
@


