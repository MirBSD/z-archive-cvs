	{
		uint32_t oldentropy, newentropy;

		RAND_bytes((u_char *)&oldentropy, sizeof (uint32_t));
		newentropy = arc4random_pushb(&oldentropy, sizeof (uint32_t));
		RAND_add(&newentropy, 4, 3.9);
