		size_t nlen;
d319 2
a320 11
		mib[0] = CTL_KERN;
		mib[1] = KERN_ARND;
		nlen = sizeof (uint32_t);
		sysctl(mib, 2, &newentropy, &nlen, &oldentropy,
		    sizeof (uint32_t));
		if (nlen == 0) {
			newentropy = arc4random_pushb(&oldentropy,
			    sizeof (uint32_t));
			nlen = 4;
		}
		RAND_add(&newentropy, nlen, nlen * 7.8);
