@/* $MirOS: www/vsbare.css,v 1.11 2006/01/20 13:08:07 tg Exp $ */
/*-
 * The MirOS Project - Webpages
 * Copyrighted material; read LICENCE for terms of use.
 *-
 * This is the master stylesheet for the new-style MirOS homepage.
 * Credits to Jupp cnuke Söntgen <cnuke@@66h.42h.de> for his feedback.
 *
 * Stylesheet variant: bare (no colours defined)
 */

body {
	max-width:100%;
	padding:2px;
}

body,p,.content {
	font-family:Times,"Times New Roman",serif;
	font-size:12pt;
}

.legalese {
	font-size:4pt;
	font-family:fixed,Terminal,monospace; }

.legalbig {
	font-size:7pt;
	font-family:fixed,Terminal,monospace; }

tt,pre {
	font-family:fixed,vga,Fixedsys,Terminal,monospace;
	font-size:14px;
}

tt {
	white-space:nowrap;
}

a {
	text-decoration:none;
}

a:hover {
	text-decoration:underline;
}

strong {
	text-decoration:underline;
}

strong:hover {
	text-decoration:none;
}

.footer {
	position:absolute;
		left: 0px; right:0px;
	padding:7px;
	margin-top:3px;
	font-size:10pt;
	border-top:inset;
}

