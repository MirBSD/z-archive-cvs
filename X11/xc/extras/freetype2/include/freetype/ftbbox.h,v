#ifndef __FTBBOX_H__
#define __FTBBOX_H__
d63 1
a63 1
  /*    algorithm which returns _very_ quickly when the two boxes          */
d76 8
a87 1

d93 1
a93 1
#endif /* __FTBBOX_H__ */
@


