d283 4
a286 2
            best_segment_first = best_point;
            best_segment_last  = best_point;
d288 4
a291 5
            if ( FT_CURVE_TAG( outline.tags[best_point] ) == FT_CURVE_TAG_ON )
            {
              best_on_point_first = best_point;
              best_on_point_last  = best_point;
